<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #f8f8f8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alphadev.artemisjvfx.controllers.Admin.AdminInscriptionCertifController">
    <BorderPane fx:id="admin_parent" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
        <left>
            <fx:include source="MenuAdmin.fxml" />
        </left>

    </BorderPane>

    <VBox layoutX="101.0" layoutY="56.0" prefHeight="560.0" prefWidth="814.0" spacing="20" style="-fx-padding: 20; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);">
      <Button fx:id="backBtn" mnemonicParsing="false" onAction="#gotoCertification" text="go back" />
        <TextField fx:id="userAddressField" prefWidth="200" promptText="User Address" style="-fx-prompt-text-fill: derive(-fx-control-inner-background, -30%); -fx-padding: 10;">
        </TextField>
        <ComboBox fx:id="certificationComboBox" prefWidth="200" style="-fx-padding: 5;">
        </ComboBox>
        <HBox spacing="10" style="-fx-alignment: center;">
            <Button onAction="#handleAddEnrollment" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-padding: 10 20; -fx-border-radius: 5;" text="Add Inscription">
            </Button>
            <Button fx:id="updateButton" onAction="#handleUpdateEnrollment" style="-fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-padding: 10 20; -fx-border-radius: 5;" text="Update Inscription">
            </Button>
            <Button fx:id="deleteButton" onAction="#handleDeleteEnrollment" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-padding: 10 20; -fx-border-radius: 5;" text="Delete Inscription">
            </Button>
        </HBox>
        <TableView fx:id="enrollmentsTable" prefHeight="200" prefWidth="217.0" style="-fx-background-color: #f9f9f9; -fx-border-color: #e2e2e2;">
            <columns>
                <TableColumn fx:id="colUserEmail" prefWidth="497.60009765625" style="-fx-font-size: 14px;" text="User Email">
                    <cellValueFactory>
                        <PropertyValueFactory property="userName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colCertificationName" prefWidth="319.9998779296875" style="-fx-font-size: 14px;" text="Certification Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="certificationName" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
